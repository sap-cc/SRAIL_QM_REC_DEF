<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        title="{i18n>take_picture_dialog_title}">
        <content>
            <VBox alignItems="Center" fitContainer="true">
                <core:HTML content="<video autoplay/>" />
            </VBox>
        </content>
        <beginButton>
            <Button text="{i18n>common_action_capture}" press="onCapturePictureByVideo" />
        </beginButton>
        <endButton>
            <Button text="{i18n>common_action_cancel}" press="onClosePictureDialog" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
